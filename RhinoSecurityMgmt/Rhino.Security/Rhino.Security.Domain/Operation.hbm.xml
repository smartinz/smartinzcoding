<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Rhino.Security.Domain.Operation, Rhino.Security.Domain" table="`security_Operations`" schema="`dbo`">

		<id name="Id" column="`Id`" type="Guid" >
			<generator class="assigned" />
		</id>


		<property name="Name" column="`Name`" type="String" not-null="true" />

		<property name="Comment" column="`Comment`" type="String" not-null="false" />


		<many-to-one name="Parent" column="`Parent`" class="Rhino.Security.Domain.Operation, Rhino.Security.Domain" />


		<set name="Children" inverse="true" cascade="save-update" lazy="true">
			<key column="`Parent`"/>
			<one-to-many class="Rhino.Security.Domain.Operation, Rhino.Security.Domain"/>
		</set>

	</class>
</hibernate-mapping>