<?xml version="1.0"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Rhino.Security.Domain.EntitiesGroup, Rhino.Security.Domain" table="`security_EntitiesGroups`" schema="`dbo`">

		<id name="Id" column="`Id`" type="Guid" >
			<generator class="assigned" />
		</id>


		<property name="Name" column="`Name`" type="String" not-null="true" />


		<many-to-one name="Parent" column="`Parent`" class="Rhino.Security.Domain.EntitiesGroup, Rhino.Security.Domain" />


		<set name="DirectChildren" inverse="true" cascade="save-update" lazy="true">
			<key column="`Parent`"/>
			<one-to-many class="Rhino.Security.Domain.EntitiesGroup, Rhino.Security.Domain"/>
		</set>


		<set name="Entities" table="`security_EntityReferencesToEntitiesGroups`" schema="`dbo`" inverse="true" cascade="save-update" lazy="true">
			<key column="`GroupId`"/>
			<many-to-many class="Rhino.Security.Domain.EntityReference, Rhino.Security.Domain" column="`EntityReferenceId`" />
		</set>

		<set name="AllChildren" table="`security_EntityGroupsHierarchy`" schema="`dbo`" inverse="true" cascade="save-update" lazy="true">
			<key column="`ChildGroup`"/>
			<many-to-many class="Rhino.Security.Domain.EntitiesGroup, Rhino.Security.Domain" column="`ParentGroup`" />
		</set>

		<set name="AllParents" table="`security_EntityGroupsHierarchy`" schema="`dbo`" inverse="false" cascade="save-update" lazy="true">
			<key column="`ParentGroup`"/>
			<many-to-many class="Rhino.Security.Domain.EntitiesGroup, Rhino.Security.Domain" column="`ChildGroup`" />
		</set>

	</class>
</hibernate-mapping>